{
    "name": "gbxnga/smart-sms-solutions",
    "description": "A PHP Package for smartsmssolution.com services",
    "keywords": ["php","github","Open Source","API", "SMS API", "sms", "smartsmssolutions"],
    "type": "library",
    "homepage": "https://github.com/gbxnga/smart-sms-solutions.git",
    "license": "MIT",
    "authors": [
        {
            "name": "Gbenga Oni",
            "email": "onigbenga@yahoo.ca",
            "homepage": "https://gbengaoni.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "beta",
    "require": {
        "php" : "~5.6|~7.0",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "guzzlehttp/guzzle": "^6.2",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Gbxnga\\SmartSMSSolutions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gbxnga\\SmartSMSSolutions\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
